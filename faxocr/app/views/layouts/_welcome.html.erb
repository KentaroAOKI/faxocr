	<table class="welcome">
		<tr>
		<td class="welcome_user">
	<% if @current_user != nil %>
		 ようこそ <%= @current_group ? @current_group.group_name + ' の ': nil %><%=h @current_user.full_name %> さん。
	<% else %>
		ようこそ ゲスト さん。
	<% end %>
	<% if @masq_from_user != nil %>
		 <br/>(<%=h @masq_from_user.full_name %> さんから、代理ログイン中)
	<% end %>
		</td>
		<td class="welcome_logout">
			<% if @current_group != nil %>
				<% if @masq_from_user == nil %>
				<% if @current_user.has_masquerade_role(@current_group.id) %>
			    	[<%= link_to '代理', {:action=>"masquerade", :controller=>"faxocr"}, :class => "welcome_logout" %>]
				<% end %>
				<% end %>
	    		[<%= link_to 'ログアウト', {:action=>"logout", :controller=>"faxocr"}, :class => "welcome_logout" %>]
			<% end %>
		</td>
		</tr>
	</table>
</div>